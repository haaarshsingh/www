<script>
  let last

  fetch('/api/last-visitor')
    .then((res) => res.json())
    .then((data) => {
      last = data.result

      const lastVisitElement = document.querySelector('.last-visit')
      if (lastVisitElement) {
        lastVisitElement.textContent = last
        lastVisitElement.classList.remove(
          'animate-pulse',
          'bg-neutral-200',
          'h-4',
          'w-28',
          'mt-0.5',
          'rounded'
        )
      }
    })
</script>

